<p>Name: <%= @room.name %></p>
<p>Capacity: <%= @room.capacity %></p>

<% @room.bookings.each do |booking| %>
<p>Start: <%= booking.start %> </p>
<p>End: <%= booking.end %> </p>
<p>Purpose: <%= booking.purpose %> </p>
<p><% link_to "Booking", booking %> </p>

<% end %>
<%= button_to "Destroy this room", @room, method: :delete %>
